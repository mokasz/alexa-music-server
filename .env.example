# Server Configuration
PORT=3000
NODE_ENV=production

# Public URL (for Alexa skill endpoint)
PUBLIC_URL=https://your-workers-subdomain.workers.dev

# Local Music Directory (for Express server - optional)
MUSIC_DIR=/path/to/your/music/directory

# Alexa Skill Configuration
ALEXA_SKILL_ID=amzn1.ask.skill.YOUR_SKILL_ID
